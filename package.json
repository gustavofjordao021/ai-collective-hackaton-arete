{
  "name": "arete",
  "version": "0.1.0",
  "private": true,
  "description": "Portable AI identity layer",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run build:packages && vite build",
    "build:packages": "npm run build:core && npm run build:memory",
    "build:core": "npm run build -w @arete/core",
    "build:memory": "npm run build -w @arete/memory",
    "test": "vitest run --config vitest.extension.config.ts",
    "test:watch": "vitest --config vitest.extension.config.ts",
    "test:core": "npm test --workspace=@arete/core",
    "test:memory": "npm test --workspace=@arete/memory",
    "test:all": "npm test --workspace=@arete/core && npm test --workspace=@arete/memory && npm run test",
    "cli": "node packages/core/dist/cli/index.js"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.27",
    "vite": "^5.4.11",
    "vitest": "^2.1.8"
  }
}
